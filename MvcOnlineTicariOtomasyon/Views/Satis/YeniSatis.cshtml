@model MvcOnlineTicariOtomasyon.Models.Siniflar.SatisHareket

@{
    ViewBag.Title = "YeniSatis";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2>Yeni Satis Ekle</h2>
<br />

<form method="post" action="/Satis/YeniSatis">
    <div class="form-group">
        @Html.HiddenFor(x => x.SatisId)
        @Html.LabelFor(x => x.Cari.CariAd)
        @Html.DropDownListFor(x => x.CariId, new SelectList(ViewBag.CariList, "Id", "Name"), "Cari Seçiniz", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Personel.PersonelAd)
        @Html.DropDownListFor(x => x.PersonelId, new SelectList(ViewBag.PersonelList, "Id", "Name"), "Personel Seçiniz", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Urun.UrunAd)
        @Html.DropDownListFor(x => x.UrunId, new SelectList(ViewBag.UrunList, "Id", "Name"), "Urun Seçiniz", new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Adet</label>
        <input type="text" class="form-control" name="SatisAdet" value="@Model.SatisAdet" />
    </div>
    <div class="form-group">
        <label>Fiyat</label>
        <input type="text" class="form-control" name="SatisFiyat" value="@Model.SatisFiyat" />
    </div>
    <div class="form-group">
        <label>Toplam</label>
        <input type="text" class="form-control" name="SatisToplamTutar" value="@Model.SatisToplamTutar" />
    </div>
    <div class="form-group">
        <label>Tarih</label>
        <input type="date" class="form-control" name="SatisTarih" value="@Model.SatisTarih.ToString("yyyy-MM-dd")" />
    </div>
    <button type="submit" class="btn btn-primary">Ekle</button>
</form>
