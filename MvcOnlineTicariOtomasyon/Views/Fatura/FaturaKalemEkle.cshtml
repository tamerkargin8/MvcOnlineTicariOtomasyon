@model MvcOnlineTicariOtomasyon.Models.Siniflar.FaturaKalem
@{
    ViewBag.Title = "FaturaKalemEkle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>Fatura Kalem Ekle</h2>
<br />

@using (Html.BeginForm("FaturaKalemEkle", "Fatura", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(x => x.FaturaAciklama)
        @Html.TextBoxFor(x => x.FaturaAciklama, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.FaturaMiktar)
        @Html.TextBoxFor(x => x.FaturaMiktar, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.FaturaBirimFiyat)
        @Html.TextBoxFor(x => x.FaturaBirimFiyat, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.FaturaTutar)
        @Html.TextBoxFor(x => x.FaturaTutar, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.FaturaId)
        @Html.TextBoxFor(x => x.FaturaId, new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Ekle</button>
}