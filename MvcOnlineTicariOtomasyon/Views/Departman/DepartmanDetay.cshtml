@{
    ViewBag.Title = "DepartmanDetay";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>Departman Detay</h2>
<br />
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Departman Adı: @ViewBag.d</li>
</ol>
<table class="table table-hover">
    <tr>
        <th>Personel Id</th>
        <th>Personel Ad</th>
        <th>Personel Soyad</th>
        <th>Personel Görsel</th>
        <th>Personel Satışlar</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.PersonelId</td>
            <td>@item.PersonelAd</td>
            <td>@item.PersonelSoyad</td>
            <td><img src="@item.PersonelGorsel" alt="Görsel" style="width:50px;height:50px;" /></td>
            <td>
                <a href="/Departman/DepartmanPersonelSatis/@item.PersonelId" class="btn btn-gradient" style="background: linear-gradient(to right, #ff7e5f, #feb47b); color: white;">Satışlar</a>
            </td>
        </tr>
    }
</table>
<style>
    .btn-gradient {
        border: dashed 1px #ff7e5f;
        border-radius: 5px;
        padding: 5px 40px;
        cursor: pointer;
        transition: background 0.3s;
    }
    .btn-gradient:hover {
        opacity: 1;
    }
</style>
