@model MvcOnlineTicariOtomasyon.Models.Siniflar.Cariler
@{
    ViewBag.Title = "CariGetir";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2>Cari Güncelle</h2>
<br />

<form method="post" action="/Cari/CariGuncelle">
    <div class="form-group">
        <label>Cari Ad</label>
        <input type="text" class="form-control" name="CariAd" value="@Model.CariAd" />
        @Html.ValidationMessage("CariAd", "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label>Cari Soyad</label>
        <input type="text" class="form-control" name="CariSoyad" value="@Model.CariSoyad" />
        @Html.ValidationMessage("CariSoyad", "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label>Cari Şehir</label>
        <input type="text" class="form-control" name="CariSehir" value="@Model.CariSehir" />
    </div>
    <div class="form-group">
        <label>Cari Mail</label>
        <input type="text" class="form-control" name="CariMail" value="@Model.CariMail" />
    </div>
    <div class="form-group">
        <label>Cari Telefon</label>
        <input type="text" class="form-control" name="CariTelefon" value="@Model.CariTelefon" />
    </div>
        <div class="form-group">
            <label>Cari Durum</label>
            <select class="form-control" name="CariDurum">
                <option value=true @(Model.CariDurum ? "selected" : "")>Aktif</option>
                <option value=false @(!Model.CariDurum ? "selected" : "")>Pasif</option>
            </select>
        </div>
    <div class="form-group">
        <input type="hidden" name="CariId" value="@Model.CariId" />
    </div>
    <button type="submit" class="btn btn-primary">Güncelle</button>
</form>

